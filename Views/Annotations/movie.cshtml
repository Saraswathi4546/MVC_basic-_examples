@model mvc_examples.Models.movie

@{
    ViewBag.Title = "movie";
}

<style>

    h2{
        text-align:center;
        text-shadow:4px 3px 4px gray;
        font-family:Arial, Helvetica, sans-serif;
    }
    .cls
    {
        background-color:aquamarine;
        text-align:center;
        border:2px solid;
        width:34%;
        margin: 2px 0px 0px 34%;
        padding:10px;

    }
    p{
            color:red;
    }
</style>

<h2>movie details </h2>

<div class="cls">

    @using(Html.BeginForm())
    {
        @Html.LabelFor(m => m.id)      
        @Html.EditorFor(m => m.id)<br />
       <p> @Html.ValidationMessageFor(m => m.id)</p>

        @Html.LabelFor(m => m.Title)
        @Html.EditorFor(m => m.Title)<br />
        <p>@Html.ValidationMessageFor(m => m.Title)</p>


        @Html.LabelFor(m => m.ReleaseDate)
        @Html.EditorFor(m => m.ReleaseDate)<br />
        <p>@Html.ValidationMessageFor(m => m.ReleaseDate)</p>


        @Html.LabelFor(m => m.Genre)
        @Html.EditorFor(m => m.Genre)<br />
        <p>@Html.ValidationMessageFor(m => m.Genre)</p>

        @Html.LabelFor(m => m.price)
        @Html.EditorFor(m => m.price)<br />
        <p>@Html.ValidationMessageFor(m => m.price)</p>

        @Html.LabelFor(m => m.rating)
        @Html.EditorFor(m => m.rating)<br />
        <p>@Html.ValidationMessageFor(m => m.rating)</p>

        <input type="submit" value="save" />

     }
</div>

